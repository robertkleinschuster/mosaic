{
  "name": "robertkleinschuster/mosaic",
  "description": "A Component Renderer for PHP",
  "homepage": "https://github.com/robertkleinschuster/mosaic",
  "type": "library",
  "license": "MIT",
  "version": "v0.0.1",
  "authors": [
    {
      "name": "Robert Kleinschuster",
      "email": "github@robs.social",
      "homepage": "https://www.robs.social",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "Mosaic\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MosaicTest\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0.3",
    "phpstan/phpstan": "^2.1.5"
  },
  "scripts": {
    "phpunit": "phpunit tests",
    "phpstan": "phpstan analyse src --level 6"
  }
}
